<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/question_item_header"
        android:layout_below="@+id/question_item_toolbar"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/question_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test title"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/question_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="I am the answer"
            android:textColor="@color/primary_material_dark"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="8dp"/>

        <cn.edu.fudan.blueflamingo.handinhand.view.DashLine
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_material_light"/>

        <RelativeLayout
            android:id="@+id/question_item_watch_container"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/question_item_img_watch"
                android:layout_margin="6dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_action_favorite"/>

            <TextView
                android:id="@+id/question_item_watch_num"
                android:layout_toRightOf="@+id/question_item_img_watch"
                android:layout_marginTop="6dp"
                android:paddingTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="123"
                android:textColor="@color/secondary_text_default_material_light"/>

            <com.gc.materialdesign.views.ButtonFlat
                android:id="@+id/question_item_btn_watch"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="@string/question_watch"
                android:background="@color/yellow700"
                />

        </RelativeLayout>

        <cn.edu.fudan.blueflamingo.handinhand.view.DashLine
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/background_material_light"/>

</LinearLayout>
