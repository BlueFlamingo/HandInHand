<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="cn.edu.fudan.blueflamingo.handinhand" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS" />

    <application
        android:name=".Global"
        android:allowBackup="true"
        android:icon="@drawable/handinhand_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AuthActivity"
            android:label="@string/title_activity_auth"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".QuestionEditActivity"
            android:label="@string/title_activity_question_edit"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cn.edu.fudan.blueflamingo.handinhand.MainActivity" />
        </activity>
        <activity
            android:name=".QuestionListActivity"
            android:label="@string/title_activity_question_list"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="cn.edu.fudan.blueflamingo.handinhand.MainActivity" />
        </activity>
        <activity
            android:name=".QuestionItemActivity"
            android:label="@string/title_activity_question_item" >
        </activity>
        <activity
            android:name=".AnswerEditActivity"
            android:label="@string/title_activity_answer_edit" >
        </activity>
        <activity
            android:name=".AnswerItemActivity"
            android:label="@string/title_activity_answer_item" >
        </activity>
        <activity
            android:name=".CommentListActivity"
            android:label="@string/title_activity_comment_list" >
        </activity>
        <activity
            android:name=".UserInfoActivity"
            android:label="@string/title_activity_user_info" >
        </activity>
        <activity
            android:name=".UserEditActivity"
            android:label="@string/title_activity_user_edit" >
        </activity>
        <activity
            android:name=".UserListActivity"
            android:label="@string/title_activity_user_list" >
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
    </application>

</manifest>
