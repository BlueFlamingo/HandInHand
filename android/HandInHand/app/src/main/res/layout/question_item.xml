<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/question_card_view"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="@color/cardview_light_background">

        <RelativeLayout
            android:paddingBottom="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:padding="5dp"
                android:id="@+id/question_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="I am title"
                android:textSize="22sp"
                android:textStyle="bold"
                />

            <ImageView
                android:padding="4dp"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="2dp"
                android:layout_below="@+id/question_title"
                android:id="@+id/question_user_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/app"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/question_watch_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="30dp"
                android:minHeight="17dp"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:layout_below="@+id/question_user_head"
                android:layout_alignLeft="@+id/question_user_head"
                android:layout_marginLeft="10dp"
                android:text="20"
                android:textColor="@color/material_blue_grey_800"
                android:background="@color/yellow200"
                />

            <TextView
                android:id="@+id/question_abstract"
                android:padding="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question_title"
                android:layout_toRightOf="@id/question_user_head"
                android:text="哈哈哈哈我是回答testtesttestasdskjdndfjvhb三等奖复合弓sdfvkljshfbkhsiushss"/>

            <TextView
                android:id="@+id/question_time"
                android:padding="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:text="2015-2-2"
                android:textColor="@color/gray_2"/>

        </RelativeLayout>

</android.support.v7.widget.CardView>