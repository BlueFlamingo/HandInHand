<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/user_item_portrait"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="8dp"
        android:src="@drawable/app"/>

    <TextView
        android:id="@+id/user_item_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user_item_portrait"
        android:text="HAHAHA"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/user_item_signature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user_item_portrait"
        android:layout_below="@id/user_item_nickname"
        android:text="I am a test description"
        android:textColor="@color/secondary_text_default_material_light"/>

</RelativeLayout>
